---
import Layout from '../layouts/Layout.astro';
import ThemeToggle from '../components/ThemeToggle.jsx';
import ForecastPage from '../components/ForecastPage.jsx'; // Import the new wrapper component


const pageTitle = 'Humidity Forecast';
---

<Layout title={pageTitle}>
  <header class="flex justify-between items-center p-4 bg-gray-800 text-white">
    <h1 class="text-2xl font-bold">{pageTitle}</h1>
    <ThemeToggle client:load />
  </header>

  <main class="container mx-auto p-4">
    <ForecastPage client:load /> {/* Render the ForecastPage component */}
  </main>

  <footer class="p-4 text-center text-gray-600">
    <p>&copy; {new Date().getFullYear()} Humidity Forecast. All rights reserved.</p>
  </footer>
</Layout>